@{
    ViewData["Title"] = "Xóa danh mục danh mục";
}
@model Category;

<div class="row">
    <div class="col-sm-12">
        <a class="btn btn-primary col-3" asp-action="Index">Quay lại</a>
        <hr>
        <div class="white-box row">

           
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-12 col-xlg-9 col-md-12">
                <div class="card">
                    <h3 class="card-header text-danger">Bạn có chắc muốn xóa danh mục này không ?</h3>
                    <div class="card-body">
                        <form method="post" asp-action="Delete" asp-route-id="@Model.Category_Id"
                            class="form-horizontal form-material">
                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Category_Id)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="text" disabled value="@Model.Category_Id"
                                        class="form-control p-0 border-0">
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label for="example-email" class="col-md-12 p-0">@Html.DisplayNameFor(item =>
                                    item.Name)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="text" placeholder="" disabled value="@Model.Name"
                                        class="form-control p-0 border-0" name="example-email" id="example-email">
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-danger text-light">Xác nhận xóa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>