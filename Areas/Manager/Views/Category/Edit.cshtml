@{
    ViewData["Title"] = "Sửa danh mục";
}
@model Category;

<div class="row">
    @await Html.PartialAsync("_MessagePartial")
    <div class="col-sm-12">
        <a class="btn btn-primary col-3" asp-action="Index">Quay lại</a>
        <hr>
        <div class="white-box row">

            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-12 col-xlg-9 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="Edit" class="form-horizontal form-material">
                            <input asp-for="Category_Id" hidden>
                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Name)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Name" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group mb-4">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>