@{
    ViewData["Title"] = "Chi tiết danh mục";
}
@model Category;

<div class="row">
    <div class="col-sm-12">
        <a class="btn btn-primary col-3" asp-action="Index">Quay lại</a>
        <hr>
        <div class="white-box row">
        
            <div class="col-lg-4 col-xlg-3 col-md-12">
                        <div class="white-box">
                            <div class="user-bg"> <img width="100%" alt="user" src="~/plugins/images/large/img1.jpg">
                                <div class="overlay-box">
                                    <div class="user-content">
                                        <a href="javascript:void(0)"><img src="~/plugins/images/users/genu.jpg"
                                                class="thumb-lg img-circle" alt="img"></a>
                                        <h4 class="text-white mt-2">Danh mục</h4>
                                        
                                    </div>
                                </div>
                            </div>
                         
                        </div>
                    </div>
                    <!-- Column -->
                    <!-- Column -->
                    <div class="col-lg-8 col-xlg-9 col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form class="form-horizontal form-material">
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Category_Id)</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="text" disabled value="@Model.Category_Id"
                                                class="form-control p-0 border-0"></div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label for="example-email" class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Name)</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="text" placeholder="" disabled value="@Model.Name"
                                                class="form-control p-0 border-0" name="example-email"
                                                id="example-email">
                                        </div>
                                    </div>
                                 
                                    <div class="form-group mb-4">
                                        <div class="col-sm-12">
                                            <button class="btn btn-warning">Edit</button>
                                            <button class="btn btn-danger">Delete</button>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</div>


