@{
    ViewData["Title"] = "Thêm danh mục";
}
@model Category;

<div class="row">
    @await Html.PartialAsync("_MessagePartial")
    <div class="col-sm-12">
        <a class="btn btn-primary col-3" asp-action="Index">Quay lại</a>
        <hr>
        <div class="white-box row">
        
            <div class="col-lg-4 col-xlg-3 col-md-12">
                        <div class="white-box">
                            <div class="user-bg"> <img width="100%" alt="user" src="~/plugins/images/large/img1.jpg">
                                <div class="overlay-box">
                                    <div class="user-content">
                                        <a href="javascript:void(0)"><img src="~/plugins/images/users/genu.jpg"
                                                class="thumb-lg img-circle" alt="img"></a>
                                        <h4 class="text-white mt-2">Danh mục</h4>
                                        
                                    </div>
                                </div>
                            </div>
                         
                        </div>
                    </div>
                    <!-- Column -->
                    <!-- Column -->
                    <div class="col-lg-8 col-xlg-9 col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form method="post" asp-action="Create" class="form-horizontal form-material">
                                   
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Name)</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input asp-for="Name" type="text" 
                                                class="form-control p-0 border-0"> 
                                        </div>
                                        <span class="badge bg-danger text-light" asp-validation-for="Name"></span>
                                    </div>
                                 
                                    <div class="form-group mb-4">
                                        <div class="col-sm-12">
                                            <button type="submit" class="btn btn-success">Thêm danh mục</button>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</div>