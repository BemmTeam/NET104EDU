@model NET104.Entities.Bill

@{
    ViewData["Title"] = "Cập nhật hóa đơn";
}



<div class="row">
    @await Html.PartialAsync("_MessagePartial")
    <div class="col-sm-12">
        <a class="btn btn-primary col-3" asp-action="Index">Quay lại</a>
        <hr>
        <div class="white-box row">

            <div class="col-lg-4 col-xlg-3 col-md-12">
               
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-12 col-xlg-9 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="Edit" class="form-horizontal form-material">
                            <input asp-for="Bill_Id" hidden>
                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Status)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <select  asp-items="@Html.GetEnumSelectList<StatusType>()" asp-for="Status" class="form-control p-0 border-0"></select>
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Status"></span>
                            </div>


                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.CreatedDate)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="CreatedDate" type="date" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="CreatedDate"></span>
                            </div>


                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Address)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Address" type="number" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Address"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Total)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Total" type="number" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Total"></span>
                            </div>


                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Cart_Id)</label>
                                <div class="col-md-12 border-bottom p-0">
                                        <select asp-for="Cart_Id" class ="form-control p-0 border-0" asp-items="ViewBag.Cart_Id"></select>
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Cart_Id"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.User_Id)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="User_Id" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="User_Id"></span>
                            </div>

                            <div class="form-group mb-4">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>